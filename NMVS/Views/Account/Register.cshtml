@model NMVS.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Account.cshtml";

}

<div class="card-body">
    <form role="form" id="account" method="post" asp-action="Register" asp-controller="Account">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <input asp-for="FullName" class="form-control form-control-lg" placeholder="Full name" aria-label="Full name">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="Account" type="text" class="form-control form-control-lg" placeholder="Login Account" aria-label="Account">
            <span asp-validation-for="Account" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Password" aria-label="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Password" aria-label="Password">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="Email" aria-label="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0">Sign in</button>
        </div>
    </form>
</div>
<div class="card-footer text-center pt-0 px-lg-2 px-1">
    <p class="mb-4 text-sm mx-auto">
        Already have an account?
        <a href="/Account/Login" target="_blank" class="text-primary text-gradient font-weight-bold">Sign in</a>
    </p>
</div>
